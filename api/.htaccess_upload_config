# Configuration pour augmenter les limites d'upload
# Renommer ce fichier en .htaccess ou fusionner avec .htaccess existant

# Augmenter les limites d'upload PHP
php_value upload_max_filesize 20M
php_value post_max_size 25M
php_value memory_limit 128M
php_value max_execution_time 300
php_value max_input_time 300

# Si les directives ci-dessus ne fonctionnent pas (certains hébergeurs),
# essayez avec php_flag ou contactez l'hébergeur

# Alternative avec ini_set (dans un fichier .user.ini si .htaccess ne marche pas)
# upload_max_filesize = 20M
# post_max_size = 25M
# memory_limit = 128M
# max_execution_time = 300
