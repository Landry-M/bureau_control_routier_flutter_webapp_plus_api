# Configuration .htaccess simplifiée pour diagnostic
# Renommez ce fichier en .htaccess pour l'utiliser

# Configuration PHP de base
php_value upload_max_filesize 50M
php_value post_max_size 50M
php_value max_execution_time 300
php_value memory_limit 256M

# CORS de base
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization"

# Gestion des requêtes OPTIONS et routing
RewriteEngine On

# Exclure le dossier uploads des redirections
RewriteCond %{REQUEST_URI} !^/uploads/

# Gestion des requêtes OPTIONS
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Permettre l'accès direct aux fichiers et dossiers existants
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^(.*)$ - [L]
